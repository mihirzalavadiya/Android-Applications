<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/firstLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/blink_anim"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Blink"
            android:background="@drawable/round_btn_yellow"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/bounce"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Bounce"
            android:background="@drawable/round_btn_blue"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/fadein"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Fade In"
            android:background="@drawable/round_btn_green"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLL"
        android:layout_below="@+id/firstLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fadeOut"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Fade Out"
            android:background="@drawable/round_btn_pink"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/lefttoright"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="LefttoRight"
            android:background="@drawable/round_btn_orange"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/mixed"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Mixed"
            android:background="@drawable/round_btn_greenblue"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdLL"
        android:layout_below="@+id/secondLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rigthtoleft"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="RigthtoLeft"
            android:background="@drawable/round_btn_blue"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/rotate"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Rotate"
            android:background="@drawable/round_btn_green"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/sample"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Sample"
            android:background="@drawable/round_btn_yellow"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourthLL"
        android:layout_below="@+id/thirdLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zoomin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Zoom In"
            android:background="@drawable/round_btn_orange"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />

        <Space
            android:layout_width="30dp"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/zoomout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Zoom Out"
            android:background="@drawable/round_btn_pink"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="center"
            />

    </LinearLayout>

</RelativeLayout>