<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/black"
    tools:context=".SharedAniationTwo">

    <ImageView
        android:id="@+id/img_person"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:transitionName="personlogoTransition"
        android:src="@drawable/person"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_person"
        android:layout_centerHorizontal="true"
        android:text="Mihir Zalavadiya"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:transitionName="titleTransition"
        android:layout_marginTop="30dp"
        android:fontFamily="monospace"/>

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/txt_name"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:justificationMode="inter_word"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:fontFamily="monospace"
        android:transitionName="descTransition"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s."
        />

    <TextView
        android:id="@+id/flip_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="Follow Mihir"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:background="@drawable/roundbtn"
        android:layout_below="@+id/txt_message"
        />

</RelativeLayout>