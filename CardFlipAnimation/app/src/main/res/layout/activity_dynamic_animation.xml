<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".DynamicAnimation">

    <TextView
        android:id="@+id/txt_spring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_spiring"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="20dp"
        android:text="Spring Animation"
        android:textColor="@color/orange" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_fling"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="90dp"
        android:text="Fling Animation"
        android:textColor="@color/blue" />

    <View
        android:id="@+id/view_spiring"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="90dp"
        android:layout_centerVertical="true"
        android:background="@color/orange"/>

    <View
        android:id="@+id/view_fling"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/view_spiring"
        android:layout_centerVertical="true"
        android:background="@color/blue"/>

</RelativeLayout>