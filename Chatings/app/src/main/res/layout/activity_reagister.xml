<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="50sp"/>

    <EditText
        android:id="@+id/rusername"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="60dp"
        android:padding="10dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_action_ruser"
        android:ems="10"
        android:hint="Name"
        android:layout_below="@+id/imageView"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/rmobileno"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:padding="10dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Mobile No."
        android:layout_below="@+id/rusername"
        android:inputType="number"
        android:maxLength="10"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/remail"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/input_bg"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/rmobileno"
        android:layout_alignLeft="@+id/rmobileno"
        android:layout_alignStart="@+id/rmobileno"
        android:layout_marginBottom="35dp"/>

    <EditText
        android:id="@+id/rpassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/input_bg"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/remail"
        android:layout_alignLeft="@+id/remail"
        android:layout_alignStart="@+id/remail"
        android:layout_marginBottom="35dp"/>

    <EditText
        android:id="@+id/rcpassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:padding="10dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Confirm Password"
        android:layout_below="@+id/rpassword"
        android:inputType="textPassword"
        android:maxLength="10"
        android:textSize="16dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/pink"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:id="@+id/cardView"
        android:layout_marginBottom="31dp"
        android:layout_below="@+id/rcpassword"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Register"
                android:textAlignment="center"
                android:fontFamily="monospace"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>