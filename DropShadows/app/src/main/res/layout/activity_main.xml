<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:justificationMode="inter_word"
        android:padding="10dp"
        android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Quaerat illum voluptate inventore quam facilis exercitationem praesentium quisquam recusandae corrupti qui, deserunt id fugiat, mollitia quos! Officia sit unde at cumque!" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:textColor="@color/black"
        android:elevation="10dp"
        android:textStyle="bold"
        android:justificationMode="inter_word"
        android:padding="10dp"
        android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Quaerat illum voluptate inventore quam facilis exercitationem praesentium quisquam recusandae corrupti qui, deserunt id fugiat, mollitia quos! Officia sit unde at cumque!" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Shadow"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:shadowColor="#666666"
        android:shadowDx="25"
        android:shadowDy="25"
        android:shadowRadius="10"/>

</LinearLayout>