<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    tools:context=".SharedAnimation">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        />

    <RelativeLayout
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/round_background"
        >

        <ImageView
            android:id="@+id/person_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:foregroundGravity="center"
            android:transitionName="personlogoTransition"
            android:src="@drawable/person"/>

        <TextView
            android:id="@+id/shared_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Mihir Zalavadiya"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:transitionName="titleTransition"
            android:layout_toRightOf="@+id/person_logo"/>

        <TextView
            android:id="@+id/profile_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/person_logo"
            android:layout_below="@+id/shared_title"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:fontFamily="monospace"
            android:transitionName="descTransition"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry..."
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on the card view to open Profile"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/profile"/>

</RelativeLayout>